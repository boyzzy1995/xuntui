page {
  font-size: 30rpx;
}

.Panel {
  padding: 20rpx;
}

.input {
  border-radius: 20px;
  background-color: #eee;
  padding: 10rpx 20rpx;
  color: #8a8a8a;
}
.AddresListPanel{
  padding: 20rpx 0 0 0;
}
.AddressName{
  color: #8a8a8a;
  display: flex;
  align-items: center;
}
.AddressLocImg{
  width: 20rpx;
  height: 20rpx;
  margin: 0 10rpx;
}
.AddressDeatil{
  margin-left:40rpx;
  border-bottom: 1px solid #eee;
  padding-bottom:10rpx;
}
.CurrentLoaction {
  padding: 80rpx 0 0 0;
}

.Title {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.LeftTitle {
  color: #8a8a8a;
  padding: 10rpx;
}
.RightTitle{
  color: #fff;
  background-color: #ff7f00;
  display: flex;
  align-items: center;
  padding: 15rpx;
  border-radius: 20px;
  font-size: 26rpx;
}
.Content {
  font-size: 34rpx;
  font-weight: 500;
  padding: 10rpx;
}
.GrayLine{
  background-color: #eee;
