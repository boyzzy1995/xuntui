/* pages/StartActivity/ChoiceTools/ChoiceTools.wxss */

.flexCenter {
  display: flex;
  justify-content: center;
  align-items: center;
}

.panel {
  color: #fff;
  background-color: #8a8a8a;
  font-size: 26rpx;
  padding: 10rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.iconView {
  width: 60rpx;
  height: 60rpx;
}

.icon {
  width: 60rpx;
  height: 60rpx;
  margin:0;
}

.ToolsView {
  display: flex;
  justify-content: center;
}

.ToolsContainer {
  padding: 30rpx 0;
  width: 96%;
  border-bottom: 1px solid #eee;
  display: flex;
  justify-content: space-between;
}

.ToolsImg {
  width: 400rpx;
  height: 200rpx;
  border-radius: 5px;
}

.ToolsImg image {
  width: 400rpx;
  height: 200rpx;
}

.ToolsWords {
  width: 300rpx;
  height: 200rpx;
}

.ToolsWordsTitle {
  font-size: 36rpx;
  font-weight: 500;
}

.ToolsDescripe {
  font-size: 26rpx;
  color: #8a8a8a;
  padding: 10rpx 0;
  height: 40rpx;
}

button::after {
  border: none;
}

.ToolsButtonView {
  padding-top: 20rpx;
}

.ToolsButtonEntity {
  background-color: #ff7f00;
  font-size: 26rpx;
  width: 200rpx;
  float: right;
  border-radius: 20px;
  color: #fff;
}

/*底部导航条*/

.bottom {
  position: fixed;
  bottom: 0;
  width: 100%;
}
/*标题*/
.HeadTitle {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 40rpx;
  margin-top: 20rpx;
}

.LineImgView {
  display: flex;
  align-items: center;
  width:200rpx;

}

.HeadTitleWords {
  font-size: 30rpx;
  color: #8a8a8a;
  width:500rpx;
text-align:center;

}

.LineImg {
  width: 240rpx;
  height: 20rpx;
}