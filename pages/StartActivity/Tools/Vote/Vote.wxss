/* pages/StartActivity/Tools/Common/Common.wxss */

.body {
  display: flex;
  align-items: center;
  flex-direction: column;
}

textarea {
  width: 100%;
  height: 150rpx;
}

.productImg {
  height: 421rpx;
  border: 1px solid #eee;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.UploadTips {
  font-size: 30rpx;
  color: #8a8a8a;
}

.ProductWords {
  padding: 10rpx 0;
  background-color: #8a8a8a;
  color: #fff;
  width: 200rpx;
  font-size: 26rpx;
  text-align: center;
  position: absolute;
  top: 0;
  right: 0;
}

.TopImg {
  width: 100%;
  height: 421rpx;
  border:1px solid #eee;
}

.InputView {
  width: 88%;
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
  display: flex;
  justify-content: space-between;
}

.InputTxt {
  font-size: 34rpx;
  display: flex;
  align-items: center;
  padding: 0 10rpx;
}

.InputBoxView {
  display: flex;
  align-items: center;
}

.InputBox {
  font-size: 34rpx;
  color: #8a8a8a;
}

.picker {
  font-size: 34rpx;
  color: #8a8a8a;
}

.Notify {
  width: 88%;
  padding: 10rpx;
}

.NotifyTitle {
  font-size: 34rpx;
  color: #ff7f00;
}

.NotifyContent {
  color: #8a8a8a;
  font-size: 28rpx;
  padding-top: 10rpx;
}

.SumbitButton {
  background-color: red;
  width: 88%;
}

/*必填报名项*/

.SignView {
  width: 90%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-top: 20rpx;
}

.SignViewInputBox {
  padding: 20rpx 0 0 0;
  display: flex;
  align-content: center;
  justify-content: space-between;
  align-items: center;
}

.Sign {
  padding: 15rpx 20rpx;
  background-color: #eee;
  width: 80%;
}

.inputAddPngView {
  display: flex;
  justify-content: center;
  width: 30%;
  height: 70rpx;
  padding: 20rpx;
  align-items: center;
  margin: 0 auto;
}

.inputAddPng {
  width: 50rpx;
  height: 50rpx;
}

.UploadView {
  margin-top: 20rpx;
  border: 1px solid #eee;
  height: 380rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.words {
  color: #8a8a8a;
  font-size: 30rpx;
}

/*单选*/

.radio-group {
  display: flex;
  flex-direction: column;
}

.times {
  width: 80rpx;
  text-align: center;
  border-bottom: 1px solid #eee;
}

.base {
  align-items: flex-end;
}
