/* pages/person/person.wxss */

page {
  font-family: Microsoft Yahei;
  font-size: 30rpx;
}

.topImage image {
  display: block;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin: 0 auto;
  margin-top: 40rpx;
}

.topImage text {
  text-align: center;
  display: block;
  margin-top: 30rpx;
}

.topImage {
  /* border-bottom:#999 solid 1px; */
  padding-bottom: 20rpx;
}

.li {
  box-sizing: border-box;
  width: 94%;
  height: 90rpx;
  line-height: 90rpx;
  margin-left: 3%;
  border-bottom: 1px rgb(241, 241, 241) solid;
  position: relative;
}

.li text:nth-child(2) {
  float: right;
  font-weight: 600;
}

.li:nth-child(2) {
  margin-top: 30rpx;
}

.li image {
  width: 40rpx;
  height: 40rpx;
  float: right;
  margin-top: 20rpx;
}

.toKefu {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  opacity: 0;
}

.bar {
  width: 100%;
  height: 30rpx;
  background-color: rgb(241, 241, 241);
}

.bottom {
  position: fixed;
  bottom: 0;
  width: 100%;
}
