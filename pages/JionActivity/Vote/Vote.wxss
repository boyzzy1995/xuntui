/* pages/JionActivity/Vote/Vote.wxss */

.RulesView {
  height: 80rpx;
  width: 96%;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.RulesTitle {
  float: right;
  text-align: center;
  background-color: #8a8a8a;
  color: #fff;
  font-size: 26rpx;
  padding: 10rpx;
  border-radius: 5px;
}

.TopImgView {
  width: 96%;
  margin: 0 auto;
  height: 405rpx;
}

.topimg {
  height: 405rpx;
  width: 100%;
}

.title {
  width: 96%;
  margin: 0 auto;
  text-align: center;
  font-size: 36rpx;
  margin-top: 20rpx;
  font-weight: 450;
  height: 50rpx;
}

.projectView {
  display: flex;
  flex-direction: column;
  width: 96%;
  margin: 0 auto;
  margin-top: 20rpx;
}

.firstView {
  display: flex;
  justify-content: space-between;
  height: 66rpx;
  align-items: center;
}

.text {
  width: 80%;
}

.votebtn {
  width: 20%;
  font-size: 26rpx;
  background-color: red;
  color: #fff;
}

.votebtnClick {
  width: 20%;
  font-size: 26rpx;
  background-color: #8a8a8a;
  color: #fff;
}

.peopleCount {
  text-align: right;
  color: #8a8a8a;
  padding-top: 20rpx;
  font-size: 26rpx;
}

.img {
  height: 405rpx;
  margin-top: 20rpx;
}

.itemimg {
  height: 405rpx;
  width: 100%;
}

