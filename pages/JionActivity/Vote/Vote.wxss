.View {
  width: 96%;
  margin: 0 auto;
  margin-top: 20rpx;
}

.activityDesc {
  margin-top: 20rpx;
  text-align: center;
  font-size: 30rpx;
}

.margin-top {
  margin-top: 20rpx;
}

.coupon {
  border: 1px solid red;
  border-radius: 10px;
  width: 80%;
  margin: 0 auto;
  margin-top: 20rpx;
  height: 160rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.tx {
  width: 100rpx;
  height: 100rpx;
  background-color: pink;
  border-radius: 50%;
}

.content {
  height: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.lefttime {
  font-size: 24rpx;
  color: #8a8a8a;
}

.use {
  font-size: 30rpx;
}

.LineImgView {
  display: flex;
  align-items: center;
}

.HeadTitle {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.HeadTitleWords {
  font-size: 32rpx;
}

.LineImg {
  width: 240rpx;
  height: 20rpx;
}

.OtherActivity {
  width: 96%;
  height: 200rpx;
  margin: 0 auto;
}

.LineImgSecond {
  width: 180rpx;
  height: 20rpx;
}

.ButtonGroup {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.ButtonGroup button {
  background-color: #add8e6;
  color: #fff;
  font-size: 30rpx;
}
